<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ToolBar id="toolbar" prefHeight="40.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="UIController.ToolbarController">
    <items>
        <Region styleClass="spacer" />
        <HBox styleClass="segmented-button-bar">
            <Button id="createWallButton" fx:id="enterPickModeButton" mnemonicParsing="false" onAction="#enterPickMode" >
                <graphic>
                    <FontIcon iconLiteral="far-hand-point-up" iconSize="48" iconColor="WHITE"/>
                </graphic>
            </Button>
            <Button id="createWallButton" fx:id="createWallButton" mnemonicParsing="false" onAction="#enterCreateWallMode" >
                <graphic>
                    <FontIcon iconLiteral="fa-edit" iconSize="48" iconColor="WHITE"/>
                </graphic>
            </Button>
        </HBox>
    </items>
</ToolBar>