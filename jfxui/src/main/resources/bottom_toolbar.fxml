<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>

<ToolBar id="bottom_toolbar" prefHeight="40.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UIController.BottomToolbarController">
    <ToolBar>
        <items>
            <Button mnemonicParsing="false" text="Button" />
            <ProgressIndicator progress="0.0" />
            <ProgressBar prefWidth="200.0" progress="0.0" />
            <HBox fx:id="scalingGroup" alignment="CENTER_RIGHT">
                <children>
                    <Slider fx:id="scaleSlider" />
                    <TextField fx:id="scaleTextField" onKeyPressed="#updateScale" prefHeight="25.0" prefWidth="38.0" />
                </children>
            </HBox>
        </items>
    </ToolBar>
   <HBox prefHeight="100.0" prefWidth="200.0" > <Label fx:id="coordinatesLabel" text="coordinatesLabel" /></HBox>

</ToolBar>
